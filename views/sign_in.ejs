<!-- Sign In form for user -->
<span id="registration">Login</span>
<div>
  <form id="register" class="form-style" action="/user/createSession" method="POST">
    <div class="form-group row">
      <div class="col">
        <input type="email" name="email" class="form-control" placeholder="Your phone" required />
        <!--Email or phone of registering user-->
      </div>
    </div>
    <div class="form-group row">
      <div class="col">
        <input type="password" name="password" class="form-control" placeholder="Password" required />
        <!--password of registering user-->
      </div>
    </div>
    <input type="submit" value="Sign In" id="submit" />
  </form>
</div>